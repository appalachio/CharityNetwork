<% content_for :title, "Editing #{resource_name.to_s.humanize}" %>

<h1 class="font-bold text-4xl">Editing <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="my-5">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, rows: 1, class: [ "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": resource.errors[:name].none?, "border-red-400 focus:outline-red-600": resource.errors[:name].any? } ] %>
  </div>

  <div class="my-5">
    <%= f.label :username %>
    <%= f.text_field :username, rows: 1, class: [ "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": resource.errors[:username].none?, "border-red-400 focus:outline-red-600": resource.errors[:username].any? } ] %>
  </div>

  <div class="my-5">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", class: [ "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": resource.errors[:email].none?, "border-red-400 focus:outline-red-600": resource.errors[:email].any? } ] %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="my-5">
    <% if resource.profile_picture.attached? %>
      Current profile picture
      <%= image_tag resource.profile_picture, alt: "Profile Picture of #{resource.name}", class: "rounded-full" %>
    <% end %>

    <%= f.label :profile_picture %> <% if resource.profile_picture.attached? %><i>(leave blank if you don't want to change it)</i><% end %>
    <%= f.file_field :profile_picture, class: [ "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": resource.errors[:profile_picture].none?, "border-red-400 focus:outline-red-600": resource.errors[:profile_picture].any? } ] %>
  </div>

  <div class="my-5">
    <%= f.label :profile %>
    <%= f.rich_text_area :profile, class: [ "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": resource.errors[:profile].none?, "border-red-400 focus:outline-red-600": resource.errors[:profile].any? } ] %>
  </div>

  <div class="my-5">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br>
    <%= f.password_field :password, autocomplete: "new-password", class: [ "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": resource.errors[:password].none?, "border-red-400 focus:outline-red-600": resource.errors[:password].any? } ] %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="my-5">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: [ "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": resource.errors[:password_confirmation].none?, "border-red-400 focus:outline-red-600": resource.errors[:password_confirmation].any? } ] %>
  </div>

  <div class="my-5">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br>
    <%= f.password_field :current_password, autocomplete: "current-password", class: [ "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", { "border-gray-400 focus:outline-blue-600": resource.errors[:current_password].none?, "border-red-400 focus:outline-red-600": resource.errors[:current_password].any? } ] %>
  </div>

  <div class="inline">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Back", :back, class: "btn btn-secondary" %>
  </div>
<% end %>

<h3 class="font-bold text-2xl mt-8">Delete Account</h3>
<%= button_to "Delete My Account", registration_path(resource_name), method: :delete, class: "btn btn-error", data: { turbo_confirm: "Are you sure you want to delete your account?" } %></div>
