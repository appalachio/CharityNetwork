<% content_for :title, "Showing page" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Showing page</h1>

  <%= render @page %>

  <%= link_to "Edit this page", edit_page_path(@page), class: "btn btn-primary" %>
  <%= link_to "Back", :back, class: "btn btn-secondary" %>
  <%= button_to "Destroy this page", @page, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "btn btn-error", data: { turbo_confirm: "Are you sure?" } %>
</div>
