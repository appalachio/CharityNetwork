<% content_for :title, "Pages" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Pages</h1>
    <% if current_user %>
      <%= link_to "New page", new_page_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <div id="pages" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @pages.any? %>
      <% @pages.each do |page| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render page %>
          <% if page.user == current_user %>
            <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
              <%= link_to "Show", page, class: "btn btn-primary" %>
              <%= link_to "Edit", edit_page_path(page), class: "btn btn-secondary" %>
              <%= button_to "Delete", page, method: :delete, class: "btn btn-error", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No pages found.</p>
    <% end %>
  </div>
</div>
