<% content_for :title, "Charities" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Charities</h1>
    <%= link_to "New charity", new_charity_path, class: "btn btn-primary" %>
  </div>

  <div id="charities" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @charities.any? %>
      <% @charities.each do |charity| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render charity %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", charity, class: "btn btn-primary" %>
            <%= link_to "Edit", edit_charity_path(charity), class: "btn btn-secondary" %>
            <%= button_to "Destroy", charity, method: :delete, class: "btn btn-error", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No charities found.</p>
    <% end %>
  </div>
</div>
