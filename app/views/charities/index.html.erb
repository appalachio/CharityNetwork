<% content_for :title, "Browsing Charities" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Browsing Charities</h1>
    <% if current_user %>
      <%= link_to "Register a New Charity", new_charity_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <div id="charities" class="min-w-full divide-y divide-gray-400 space-y-5">
    <% if @charities.any? %>
      <% @charities.each do |charity| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render charity %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", charity, class: "btn btn-primary" %>
            <% if current_user and current_user&.charity == charity %>
              <%= link_to "Edit", edit_charity_path(charity), class: "btn btn-secondary" %>
              <%= button_to "Delete", charity, method: :delete, class: "btn btn-error", data: { turbo_confirm: "Are you sure you want to delete this charity?" } %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No charities found.</p>
    <% end %>
  </div>
</div>
