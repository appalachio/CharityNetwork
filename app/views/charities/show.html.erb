<% content_for :title, "Showing Charity" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Showing Charity</h1>

  <%= render @charity %>

  <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
    <%= link_to "Back", :back, class: "btn btn-primary" %>

    <% if current_user and current_user&.charity == @charity %>
      <%= link_to "Edit", edit_charity_path(@charity), class: "btn btn-secondary" %>
      <%= button_to "Delete", @charity, method: :delete, class: "btn btn-error", data: { turbo_confirm: "Are you sure you want to delete this charity?" } %>
    <% end %>
  </div>
</div>
